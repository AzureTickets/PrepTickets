# A sample Gemfile
source "https://rubygems.org"

gem 'sprockets'                  # Asset packaging
gem 'sass'                       # Scss
gem 'coffee-script'              # CoffeScript

gem 'yui-compressor'             # CSS compressor
gem 'uglifier'                   # JS compressor

gem 'rack'                       # basic web server responder
gem 'tilt'                       # rendering engine
gem 'actionpack', '~> 4.0.0'     # part of rails (Mainly interested in helpers)
gem 'rake'                       # similar to 'make' on linux but for ruby

gem 'activesupport', '~> 4.0.0'  # Adds a bunch of helpers to Ruby (comes from rails)

gem 'rack-livereload'            # live reload client
gem 'guard-livereload'           # live reload server

gem "better_errors"              # Returns better errors!
gem "binding_of_caller"          # Allows use to query variables in realtime (in ruby)
